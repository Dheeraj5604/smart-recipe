<%- include('partials/header') %>

<div class="hero-section min-h-[calc(100vh-68px)] flex items-center justify-center p-4">
    <div class="hero-bg"></div>

    <div class="w-full max-w-3xl mx-auto bg-white/20 backdrop-blur-lg p-8 md:p-12 rounded-2xl shadow-2xl border border-white/20">
        <div class="text-center mb-8">
            <h2 class="text-4xl md:text-5xl font-serif font-bold mb-3">Find Your Next Meal</h2>
            <p class="text-lg text-gray-200">Tell us what you have, and we'll do the rest.</p>
        </div>
    
        <form action="/find-recipes" method="POST" enctype="multipart/form-data">
            <div class="mb-6">
                <label for="ingredients" class="block text-sm font-bold text-white mb-2">
                    Enter ingredients you have (comma separated)
                </label>
                <textarea id="ingredients" name="ingredients" rows="3" class="w-full px-4 py-2 bg-white/80 text-gray-800 border-2 border-transparent rounded-md focus:ring-emerald-500 focus:border-emerald-500 focus:bg-white transition-all" placeholder="e.g., chicken, rice, onion, garlic"></textarea>
            </div>
    
            <div class="text-center my-4 text-gray-200 font-semibold">OR</div>
        
            <div class="mb-6">
                <label for="image-upload" class="block text-sm font-bold text-white mb-2">
                    Upload a photo of your ingredients
                </label>
                <div id="image-upload-wrapper" class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300/50 border-dashed rounded-md bg-white/10 hover:border-emerald-400 transition-colors">
                    <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-300" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="flex text-sm text-gray-200">
                            <label for="image-upload" class="relative cursor-pointer bg-white/20 rounded-md font-medium text-emerald-300 hover:text-white px-2">
                                <span>Upload a file</span>
                                <input id="image-upload" name="image" type="file" class="sr-only">
                            </label>
                            <p class="pl-1">or drag and drop</p>
                        </div>
                        <p id="image-filename" class="text-sm font-medium text-emerald-300 mt-2"></p>
                    </div>
                </div>
            </div>
            
            <div id="loading-spinner" class="hidden items-center justify-center mb-4">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-emerald-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="text-gray-200">Analyzing ingredients...</span>
            </div>
    
            <div class="mt-8">
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-lg text-lg font-semibold text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transform hover:scale-105 transition-transform duration-300">
                    Find Recipes
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>